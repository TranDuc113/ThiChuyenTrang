    <style>
        #dropzoneAnhDaiDien {
            position: relative;
            border: 1px dotted #000;
            border-radius: 10px;
            color: #000;
            height: 140px;
            text-align: center;
        }

        #dropzoneAnhDaiDien.hover {
            border: 4px solid green;
            color: green;
        }

        #dropzoneAnhDaiDien.dropped {
            background: #222;
            border: 5px solid #444;
        }

        #dropzoneAnhDaiDien div {
            position: absolute;
            top: 50%;
            right: 0;
            bottom: 0;
            left: 0;
        }

        #dropzoneAnhDaiDien img {
            border-radius: 5px;
            vertical-align: middle;
            max-width: 95%;
            max-height: 95%;
        }

        #dropzoneAnhDaiDien [type="file"] {
            cursor: pointer;
            position: absolute;
            opacity: 0;
            top: 0;
            right: 0;
            bottom: 0;
            left: 0;
        }

    </style>
<div class="row">
    <div class="col-8">
        <div class="row">
            <div class="col-xxl-12 col-md-12">
                <div>
                    <label for="basiInput" class="form-label">Danh mục</label>
                    <select class="form-select" id="slDanhMucThemMoi">
                        <option value="">Chọn </option>
                        @if (lstCategory != null)
