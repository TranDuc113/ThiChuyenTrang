<head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta content="Premium Multipurpose Admin & Dashboard Template" name="description" />
    <meta content="Themesbrand" name="author" />
    <!-- Layout config Js -->
    <script src="/Common/assets/js/layout.js"></script>
    <!-- Bootstrap Css -->
    <link href="/Common/assets/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <!-- Icons Css -->
    <link href="/Common/assets/css/icons.min.css" rel="stylesheet" type="text/css" />
    <!-- App Css-->
    <link href="/Common/assets/css/app.min.css" rel="stylesheet" type="text/css" />
    <!-- custom Css-->
    <link href="/Common/assets/css/custom.min.css" rel="stylesheet" type="text/css" />
    <link href="/Common/assets/libs/toast/toast.css" rel="stylesheet" type="text/css" />
    <link href="/Common/assets/css/loading.css"  rel="stylesheet" type="text/css"/>
    
</head>

<body>
    <!-- loading -->
    <div id="loading" class="">
        <div>
            <span class="loader"></span>
            <span class="loader2">Loading</span>
        </div>
    </div>
    <div id="toast_msg"></div>
    <div class="auth-page-wrapper pt-5">
        <!-- auth page bg -->
        <div class="auth-one-bg-position auth-one-bg" id="auth-particles">
            <div class="bg-overlay"></div>

            <div class="shape">
                <svg xmlns="http://www.w3.org/2000/svg" version="1.1" xmlns:xlink="http://www.w3.org/1999/xlink" viewBox="0 0 1440 120">
                    <path d="M 0,36 C 144,53.6 432,123.2 720,124 C 1008,124.8 1296,56.8 1440,40L1440 140L0 140z"></path>
                </svg>
            </div>
        </div>

        <!-- auth page content -->
        <div class="auth-page-content">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="text-center mt-sm-5 mb-4 text-white-50">
                            <p class="mt-3 fs-15 fw-medium" style="padding:10px"></p>
                        </div>
                    </div>
                </div>
                <!-- end row -->

                <div class="row justify-content-center">
                    <div class="col-md-8 col-lg-6 col-xl-5">
                        <div class="card mt-4">

                            <div class="card-body p-4">
                                <div class="text-center mt-2">
                                    <h4 class="text-primary">Đăng nhập</h4>
                                </div>
                                <div class="p-2 mt-4">
                                    <form action="#">

                                        <div class="mb-3">
                                            <label for="username" class="form-label">Tài khoản</label>
                                            <input type="text" class="form-control" id="username" placeholder="Tài khoản">
                                        </div>

                                        <div class="mb-3">
                                            @*                                            <div class="float-end">
                                                <a href="auth-pass-reset-basic.html" class="text-muted">Forgot password?</a>
                                                </div>*@
                                            <label class="form-label" for="password-input">Mật khẩu</label>
                                            <div class="position-relative auth-pass-inputgroup mb-3">
                                                <input type="password" class="form-control pe-5" placeholder="Mật khẩu" id="password">
                                                <button class="btn btn-link position-absolute end-0 top-0 text-decoration-none text-muted" type="button" id="password-addon"><i class="ri-eye-fill align-middle"></i></button>
                                            </div>
                                        </div>
                                        @*
                                            <div class="form-check">
                                            <input class="form-check-input" type="checkbox" value="" id="auth-remember-check">
                                            <label class="form-check-label" for="auth-remember-check">Remember me</label>
                                            </div>*@

                                        <div class="mt-4">
                                            <a class="btn btn-success w-100" href="#" onclick="DangNhap()">Đăng nhập</a>
                                        </div>
                                    </form>
                                </div>
                            </div>
                            <!-- end card body -->
                        </div>

                    </div>
                </div>
                <!-- end row -->
            </div>
            <!-- end container -->
        </div>
        <!-- end auth page content -->
        <!-- footer -->
        <footer class="footer">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="text-center">
                            <p class="mb-0 text-muted">
                                &copy;
                                copyright - Trần Hữu Đức
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </footer>
        <!-- end Footer -->
    </div>
    <!-- end auth-page-wrapper -->
    <!-- JAVASCRIPT -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="/Common/assets/libs/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="/Common/assets/libs/simplebar/simplebar.min.js"></script>
    <script src="/Common/assets/libs/node-waves/waves.min.js"></script>
    <script src="/Common/assets/libs/feather-icons/feather.min.js"></script>
    <script src="/Common/assets/js/pages/plugins/lord-icon-2.1.0.js"></script>

    <!-- prismjs plugin -->
    <script src="/Common/assets/libs/prismjs/prism.js"></script>

    <!-- notifications init -->
    <script src="/Common/assets/js/pages/notifications.init.js"></script>
    <script src="/Common/assets/libs/toast/toast.js"></script>
    <script src="/js/Common.js"></script>
    <script src="/js/base.js"></script>

    <script>
        function DangNhap() {
            var user = {
                TaiKhoan: $("#username").val(),
                MatKhau: $("#password").val(),
            }
            loading();
            $.post("/Admin/Login/Authenicate", { "user": user }, function (data) {
                if (data.icon == "success") {
                    window.location.href = "/Admin/Home/index";
                } else {
                    debugger;
                    ToastMessage("Có lỗi", data.message, data.icon, 'warning')
                }
                offLoading();
            });
        }
    </script>
</body>


